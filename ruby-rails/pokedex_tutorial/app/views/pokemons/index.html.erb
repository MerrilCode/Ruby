<p id="notice"><%= notice %></p>

<h1>Pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Bio</th>
      <th>Lvl</th>
      <th>Element</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.name %></td>
        <td><%= pokemon.breed %></td>
        <td><%= pokemon.bio %></td>
        <td><%= pokemon.lvl %></td>
        <td><%= pokemon.element %></td>
        <td><%= link_to 'Show', trainer_pokemon_path(pokemon.trainer, pokemon) %></td>
        <td><%= link_to 'Edit', edit_trainer_pokemon_path(pokemon.trainer, pokemon) %></td>
        <td><%= link_to 'Destroy', trainer_pokemon_path(pokemon.trainer, pokemon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

