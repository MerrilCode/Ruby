<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Cost</th>
      <th>Number</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.cost %></td>
        <td><%= order.number %></td>
        <td><%= order.customer %></td>
        <td><%= link_to 'Show', customer_order_path(order.customer, order) %></td>
        <td><%= link_to 'Edit', edit_customer_order_path(order.customer, order) %></td>
        <td><%= link_to 'Destroy', customer_order_path(order.customer, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_customer_order_path %>












