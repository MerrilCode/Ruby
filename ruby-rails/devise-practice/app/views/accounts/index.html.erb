<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <div class="row">
      <div class="col-lg-3 col-md-3 col-sm-3">Company</div>
      <div class="col-lg-3 col-md-3 col-sm-3">Fee</div>
    </div>
  </thead>

  <tbody>
   
    <% @accounts.each do |account| %>
      <div class="row">
          <div class="col-lg-3 col-md-3 col-sm-3"><%= account.company %></div>
          <div class="col-lg-3 col-md-3 col-sm-3"><%= account.fee %></div>
          <div class="col-lg-2 col-md-2 col-sm-2"><%= link_to 'Show', account %></div>
          <div class="col-lg-2 col-md-2 col-sm-2"><%= link_to 'Edit', edit_account_path(account) %></div>
          <div class="col-lg-2 col-md-2 col-sm-2"><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></div>
     </div>
      <% end %>
     
  </tbody>
</table>

<br>

